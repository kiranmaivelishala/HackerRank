//maximumDifference=0;
public void computeDifference()
{
   for(int j=0;j<k;j++){ 
for(int i=0;i<k;i++)
{
    if(Math.abs(b[j]-b[i])>maximumDifference)
     maximumDifference=Math.abs(b[j]-b[i]);   
}
   }
